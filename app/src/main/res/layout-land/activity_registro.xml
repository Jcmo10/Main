<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistroActivity">

    <ImageView android:layout_width="180dp"
               android:layout_height="168dp"
               android:src="@drawable/sign_ip_icon"
               android:id="@+id/imageView3"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="8dp" android:layout_marginTop="8dp"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
               app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/etcCnfirPass"
               android:layout_marginEnd="8dp"/>

    <EditText android:layout_width="240dp"
              android:layout_height="50dp"
              android:id="@+id/etCorreo"
              android:inputType="textEmailAddress"
              android:hint="@string/tvCorreo"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="96dp" android:layout_marginTop="48dp"
              app:layout_constraintTop_toTopOf="parent"/>

    <EditText android:layout_width="240dp"
              android:layout_height="50dp"
              android:id="@+id/etPass"
              android:hint="@string/tvPass"
              android:inputType="numberPassword"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="96dp"
              app:layout_constraintTop_toBottomOf="@+id/etCorreo"
    />

    <EditText android:layout_width="240dp"
              android:layout_height="50dp"
              android:id="@+id/etcCnfirPass"
              android:hint="@string/tvConfPass"
              android:inputType="numberPassword"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="96dp"
              app:layout_constraintTop_toBottomOf="@+id/etPass"/>

    <Button
            android:text="@string/sign_up"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:id="@+id/btnsignup"
            android:background="@color/greenca"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etcCnfirPass" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>