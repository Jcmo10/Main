<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".HomeFragment">

   <ImageView
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:src="@drawable/fincalogo"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tinfo"
            android:layout_margin="5dp"
            android:textSize="18sp"
            android:hint="Emaila\nas\ndfasdasdasd"
            />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ddatoss"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >

        <TextView
                android:id="@+id/tAñAnimal"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@color/redd"
                android:drawableTop="@drawable/add_foreground"
                android:text="@string/añadiranimal"
                android:textAlignment="center"
                android:textSize="18sp" />

        <TextView
                android:id="@+id/tAñTrabajador"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@color/orange"
                android:drawableTop="@drawable/add_foreground"
                android:text="@string/añadirtrabajador"
                android:textAlignment="center"
                android:textSize="18sp"

                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ddatoss2"
            android:orientation="horizontal"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            >
        <TextView
                android:id="@+id/tAñveterianrio"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="@color/yellow"
                android:drawableTop="@drawable/add_foreground"
                android:text="@string/añadirveterianria"
                android:textAlignment="center"
                android:textSize="18sp"

                />

        <TextView
                android:id="@+id/tAñevento"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="130dp"
                android:layout_margin="2dp"
                android:background="@color/royalblue"
                android:drawableTop="@drawable/add_foreground"
                android:text="@string/añadirevento"
                android:textAlignment="center"
                android:textSize="18sp"
                 />

    </LinearLayout>


</LinearLayout>